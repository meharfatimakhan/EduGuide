      -webkit-box-shadow: 4px 4px 14px #000;
      box-shadow: 4px 4px 14px #000;*/
      
      } 
  body#page-top.backgroundRest
    nav.navbar.fixed-top.navbar-expand-lg.navbar-light.bg-dark.fixed-top
      .container
        a.navbar-brand.js-scroll-trigger(href='/university')
          img.img-fluid.rounded-circle(src='/img/logo32.png', alt='EduGuide Logo')
        b
          a.navbar-brand.js-scroll-trigger(href='/university') EDUGUIDE
        button.navbar-toggler.navbar-toggler-right(style="color:white",type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              b
                a.nav-link(href='/university') DASHBOARD
            li.nav-item.dropdown
              b
                a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | DOCUMENTS
                .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownPortfolio')
                  a.dropdown-item(href='/upload') UPLOAD
                  a.dropdown-item(href='/saved') SAVED
            li.nav-item.dropdown
              b
                a#navbarDropdownBlog.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | PROFILE
                .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownBlog')
                  a.dropdown-item(href='/profile/'+userID) MY PROFILE
                  a.dropdown-item(href='/edit') EDIT PROFILE
            li.nav-item
              b
                a.nav-link(href='/') LOGOUT            
    
    br
    br 
    
    .container
      .content-section-heading.text-center
        h1.mb-1(style="color:white;display:inline-block") PROFILE
      br
    section#portfolio.content-section
      .container.emp-profile.bg-light
        .content-section-heading.text-center
            h1.mb-1(style="color:white;display:inline-block")
        .container
          form(method='post')
            .row
              .col-md-4
                .profile-img
                  .mydiv
                    img(src=displayPicture, alt='')
                  
              .col-md-6
                .profile-head
                  h5
                    | 
                    = fullName
                  h6
                    | Student
                  p.proile-rating
                    |  
                    span 
                  ul#myTab.nav.nav-tabs(role='tablist')
                    li.nav-item
                      a#home-tab.nav-link.active(data-toggle='tab', href='#home', role='tab', aria-controls='home', aria-selected='true') About
                    li.nav-item
                      a#profile-tab.nav-link(data-toggle='tab', href='#profile', role='tab', aria-controls='profile', aria-selected='false') My Uploads
              .col-md-2
                input.btn.btn-primary.btn-xl.js-scroll-trigger(value='Edit Profile',type="button",onclick="location.href='/edit'")
            .row
              .col-md-4
                .profile-work
              .col-md-8
                #myTabContent.tab-content.profile-tab
                  #home.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='home-tab')
                    .row
                      .col-md-6
                        label User ID
                      .col-md-6
                        p 
                          =userID
                    .row
                      .col-md-6
                        label Username
                      .col-md-6
                        p 
                          =username
                    .row
                      .col-md-6
                        label University
                      .col-md-6
                        p  
                          =universityName
                    .row
                      .col-md-6
                        label Department
                      .col-md-6
                        p 
                          =departmentName
                    .row
                      .col-md-6
                        label Batch
                      .col-md-6
                        p 
                          =batch
                    .row
                      .col-md-6
                        label Roll Number
                      .col-md-6
                        p
                          =rollNumber
                  #profile.tab-pane.fade(role='tabpanel', aria-labelledby='profile-tab')
                    br
                    .row
                      -var index=0;
                      each entry in myUps
                        .col-md-6

                          a.portfolio-item(href="/document/"+ entry._id)
                            span.caption
                              span.caption-content
                                h6
                                  b
                                    =entry.documentName
                                p.mb-0 UPLOADER: 
                                  |  
                                  =fullName
                            .docDiv
                              iframe(src="/images/"+entry.path, type='application/pdf', width='100%', height='100%',style="display:inline-block",frameborder="0",marginheight='0', marginwidth='0')        
                              br
                            section
                            
                      -index++;
                    br
                    br
                    br
                    
                   
                    

    
    a.scroll-to-top.rounded.js-scroll-trigger(href='#page-top')
      i.fas.fa-angle-up
