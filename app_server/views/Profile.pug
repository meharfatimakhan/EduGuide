    style.
      .backgroundRest{
      /*background-image: url('img/Influenza.jpg');*/
      background-attachment:fixed;
      background-repeat: no-repeat;
      background:url('img/bb3.jpg');
      }
      .navbar {
      overflow: visible;
      background-color: black;
      opacity: 0.8;
      }
     * {
        box-sizing: border-box;
      }   
      .mydiv {
      height:20%;
      width: 20%;
      overflow: hidden;
      image-orientation: from-image;
      
     }
     #myInput {
     background-image: url('img/search.png');
     background-position: 10px 12px;
     background-repeat: no-repeat;
     width: 100%;
     font-size: 16px;
     padding: 12px 20px 12px 40px;
     border: 1px solid #ddd;
     margin-bottom: 12px;
     }
     .bg-light{
         opacity: 0.5;
     }
     #upload{
         display:none;
     }
  body#page-top.backgroundRest
    nav.navbar.fixed-top.navbar-expand-lg.navbar-light.bg-dark.fixed-top
      .container
        a.navbar-brand.js-scroll-trigger(href='/university')
          img.img-fluid.rounded-circle(src='/img/logo32.png', alt='EduGuide Logo')
        b
          a.navbar-brand.js-scroll-trigger(href='/university') EDUGUIDE
        button.navbar-toggler.navbar-toggler-right(style="color:white",type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              b
                a.nav-link(href='/university') DASHBOARD
            li.nav-item.dropdown
              b
                a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | DOCUMENTS
                .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownPortfolio')
                  a.dropdown-item(href='/upload') UPLOAD
                  a.dropdown-item(href='/saved') SAVED
                  a.dropdown-item(href='/profile') UPLOADED
            li.nav-item.dropdown
              b
                a#navbarDropdownBlog.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | PROFILE
                .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownBlog')
                  a.dropdown-item(href='/profile/'+userID) MY PROFILE
                  a.dropdown-item(href='/edit') EDIT PROFILE
            li.nav-item
              b
                a.nav-link(href='/') LOGOUT            
    
    br
    br
    br
    br
    
    .main
      section.signup
        .container
          .signup-content
            form#signup-form.signup-form(role='form', method='post',action='/edit?_method=put',enctype='multipart/form-data')
              
              h2.form-title EDIT PROFILE
              br
              br
              .form-group(align='center')
                .mydiv
                  img.rounded-circle.img-fluid.mx-auto( src=displayPicture, alt='avatar')
                br
                h6(style='color:white') Upload a different photo:
                input#upload(name='profilePicture',type='file')
                a#uploadMyFile1.form-submit(href='') UPLOAD
                br
                br
              .form-group
                h6 USERNAME:
                input#name.form-input(value=currentUser, readonly='',type='text', name='username', placeholder='Your Username')
              .form-group
                h6 FULL NAME:
                input#name.form-input(type='text', value=currentName, name='fullName', placeholder='Your Full Name')
              .form-group
                h6 UNIVERSITY NAME:
                input#name.form-input(type='text', value=currentUniversity, name='universityName', placeholder='Your University Name')
              .form-group
                h6 DEPARTMENT NAME:
                input#name.form-input(type='text', value=currentDepartment, name='departmentName', placeholder='Your Department Name')
              .form-group
                h6 ROLL NUMBER:
                input#name.form-input(type='text', value=currentRollNumber, name='rollNumber', placeholder='Your Roll Number')
              .form-group
                h6 BATCH:
                input#name.form-input(type='text', value=currentBatch, name='batch', placeholder='Your Batch Year')
              .form-group
                h6 PASSWORD:  
                input#password.form-input(type='password', name='password1', placeholder='Password')
                span.zmdi.zmdi-eye.field-icon.toggle-password(toggle='#password')
              .form-group
                h6 CONFIRM PASSWORD:
                input#re_password.form-input(type='password', name='password2',placeholder='Repeat Your Password')
              .form-group
                //-input#submit.form-submit(type='submit', name='submit', value='update')
                input#submit.form-submit(value='UPDATE', type='submit',name='submit')
 
    
    a.scroll-to-top.rounded.js-scroll-trigger(href='#page-top')
      i.fas.fa-angle-up
