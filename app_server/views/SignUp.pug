    section
      .container.text-center.my-auto
        h2.mb-1(style="color:#4db8ff;display:inline-block") SIGN UP
        .header-content.mx-auto
            if errors
                each error,i in errors
                    div.alert.alert-danger #{error.msg}
            h6.mb-3
                br
                form.form-horizontal(method='post',action='/signup',enctype='multipart/form-data',role='form',id='frm')
                  .form-group(style='color:white')
                      h4(style='color:#4db8ff')
                        span#checking()
                        br
                        p
                      h6(align='left') USERNAME:
                      .input-group.mb-3
                        .input-group-prepend
                      input.form-control(name='username', id='username', minlength=4, type='text', placeholder='Enter username', aria-label='Username', aria-describedby='basic-addon1', required='')
                  .form-group(style='color:white')
                      h6(align='left') FULL NAME:
                      .input-group.mb-3
                        .input-group-prepend
                      input.form-control(name='fullName', type='text', placeholder='Enter your full name', aria-label='FullName', aria-describedby='basic-addon1', required='')
                      
                  .form-group(style='color:white')
                      h6(align='left') UNIVERSITY NAME:
                      .input-group.mb-3
                        .input-group-prepend
                      select.form-control#uniName(name='universityName')
                        option(disabled='', selected='', value='0' required)  Select University..
                        -var index=0;
                        each entry in saarayUnis
                          option(value=entry._id, name='universityName') 
                            =entry.universityName
                        -index++;
                      //-input.form-control(name='universityName',type='text', placeholder='Enter your university name', aria-label='University Name', aria-describedby='basic-addon1') 
                  .form-group(style='color:white')
                      h6(align='left') DEPARTMENT NAME:
                      .input-group.mb-3
                        .input-group-prepend
                      select.form-control#deptName(name='departmentName')
                        option(disabled='', selected='',value='0' required)  Select Department..
                      //-input.form-control(name='departmentName',type='text', placeholder='Enter your department name', aria-label='Department Name', aria-describedby='basic-addon1')
                  .form-group(style='color:white')
                      h6(align='left') ROLL NUMBER:
                      .input-group.mb-3
                        .input-group-prepend
                      input.form-control(name='rollNumber',type='text', placeholder='Enter your roll number', aria-label='Roll Number', aria-describedby='basic-addon1')
                  .form-group(style='color:white')
                      h6(align='left') BATCH:
                      .input-group.mb-3
                      .input-group-prepend
                      input.form-control(name='batch',type='text', placeholder='Enter your batch year', aria-label='Batch', aria-describedby='basic-addon1')
                  .form-group(style='color:white')
                      h6(align='left') PASSWORD:
                      .input-group.mb-3
                        .input-group-prepend
                      input.form-control(id= 'password', name='password', minlength=5,type='password', placeholder='Enter Password', aria-label='Password', aria-describedby='basic-addon1', required='')
                  .form-group(style='color:white')
                      h6(align='left') CONFIRM PASSWORD:
                      .input-group.mb-3
                        .input-group-prepend
                      input.form-control(id='confirmPassword',name='confirmPassword', minlength=5, type='password', placeholder='Confirm Password', aria-label='Confirm Password', aria-describedby='basic-addon1', required='')
                      h4
                        span#message

                  .form-group
                      input#upload(name='profilePicture',type='file',accept="image/*" required)
                      a#uploadMyFile1.btn.btn-primary.btn-xl.js-scroll-trigger(href='') UPLOAD
                      h5
                        span#demo
                      br
                      br
                      input.btn-primary.btn-xl.js-scroll-trigger(id='sub', type='submit',disabled='', name='submit',value='REGISTER',style="color:white",onclick="myFunction()")
                 

